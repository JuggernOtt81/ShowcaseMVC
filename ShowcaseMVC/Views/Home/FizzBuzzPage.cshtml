@model ShowcaseMVC.Models.FizzBuzz
@{
    ViewData["Title"] = "Fizz Buzz";
}

<main id="hero">
    <div class="container py-5 mt-5">
        <div class="row row-cols-1 row-cols-lg-2">
            <div class="col col-lg-4 border-2 border-end">
                <h1 class="fw-bold lh-1 mb-3">FIZZ-BUZZ:</h1><h4>A Coding Challenge</h4>
                <h4 class="lead" style="color:azure;">Count to Limit (100), whenever the number is a multiple of Fizz (3), replace the number with the word 'FIZZ'. - Likewise, multiples of Buzz (5) are to be replaced with the word 'BUZZ'. - But when the number is a multiple of <em>both</em> Fizz & Buzz, replace it with the word 'Fizz-Buzz'.</h4>
                <h2 class="mt-5 border-bottom border-2">Instructions</h2>
                <p style="color:ghostwhite;">
                    1 - Enter a number in each box.<br>2 -Press the <strong>Submit</strong> button<br><span style="font-size: small;">TIP:<br>Keep the numbers low, unless you want to cause your CPU pain!</span>
                </p>
            </div>
            <div class="col col-lg-8 text-light">
                <h5>Enter Values</h5>
                <form asp-controller="Home" asp-action="FizzBuzzPage" method="post">
                    <div class="form-group">
                        <label asp-for="FizzValue">Fizz Value</label>
                        <input type="number" asp-for="FizzValue" class="form-control" placeholder="Enter Fizz" value="@Model.FizzValue" />
                    </div>
                    <div class="form-group">
                        <label asp-for="BuzzValue">Buzz Value</label>
                        <input type="number" asp-for="BuzzValue" class="form-control" placeholder="Enter Buzz" value="@Model.BuzzValue" />
                    </div>
                    <div class=" col d-flex justify-content-end">
                        <button type="submit" class="btn btn-cfOrange">Submit</button>
                    </div>
                </form>
                <div class="row">
                    <div class="col">
                        <h2 class="mt-5 border-bottom border-2">Results</h2>
                        <div class="table-responsive" style="background-color:paleturquoise;">
                            @if (Model.Result.Count > 0)
                            {
                                <table class="table-striped table-hover table table-dark">
                                    <thead>
                                        <tr><th colspan="5">Fizz Buzz Results</th></tr>
                                    </thead>
                                    @for (int i = 0; i < Model.Result.Count(); i += 5)
                                    {
                                        <tr><td>@Model.Result[i]</td><td>@Model.Result[i + 1]</td><td>@Model.Result[i + 2]</td><td>@Model.Result[i + 3]</td><td>@Model.Result[i + 4]</td></tr>
                                    }
                                </table>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>